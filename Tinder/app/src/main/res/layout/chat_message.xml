<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/chat_message_layout"
            android:layout_width="275dp"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_own"
            android:layout_margin="10dp">

        <TextView
                android:id="@+id/chat_message_timestamp"
                android:text="Some Time"
                android:textSize="14dp"
                android:gravity="right"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/chat_message_text"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
                android:id="@+id/chat_message_user"
                android:text="This is some text"
                android:textSize="14dp"
                android:layout_width="259dp"
                android:layout_height="17dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

        <TextView
                android:id="@+id/chat_message_text"
                android:text="Some Guy"
                android:textSize="16dp"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/chat_message_user"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>