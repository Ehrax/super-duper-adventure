<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:background="@color/color_chat_bubble_own"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <TextView
            android:id="@+id/chat_message_user"
            android:text="This is some text"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/chat_message_text"
            android:text="Some Guy"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_message_user"/>

    <TextView
            android:id="@+id/chat_message_timestamp"
            android:text="Some Time"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chat_message_text"
            android:layout_alignParentEnd="true"/>

</RelativeLayout>