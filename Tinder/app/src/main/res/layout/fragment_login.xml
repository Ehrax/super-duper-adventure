<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        tools:context="de.in.uulm.map.tinder.login.LoginActivity"
        android:background="@color/color_accent">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteX="16dp"
            android:id="@+id/edit_txt_email_login"
            android:hint="@string/username"
            android:textColor="@color/login_text_color"
            android:textColorLink="@color/login_text_color"
            android:textColorHint="?attr/colorBackgroundFloating"
            android:backgroundTint="@color/login_text_color"
            android:layout_marginTop="126dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_view_logo" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteX="16dp"
            android:id="@+id/edit_txt_password_login"
            android:hint="@string/password"
            android:textColor="@color/login_text_color"
            android:textColorHint="?attr/colorBackgroundFloating"
            android:backgroundTint="@color/login_text_color"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_txt_email_login" />

    <Button
            android:text="@string/sign_in"
            android:layout_width="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="16dp"
            android:id="@+id/btn_signin"
            android:backgroundTint="@color/common_google_signin_btn_text_light_default"
            android:textColor="@color/login_text_color"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_txt_password_login" />

    <TextView
            android:text="@string/create_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_view_register_link"
            android:textColor="@color/login_text_color"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_signin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.5"

             />

    <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_view_logo"
            android:textAppearance="@android:style/TextAppearance"
            android:fontFamily="sans-serif"
            android:typeface="sans"
            android:textSize="62sp"
            android:textColor="@color/login_text_color"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="101dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
             />

</android.support.constraint.ConstraintLayout>
