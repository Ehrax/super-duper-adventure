<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="324dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <ImageView
                    android:id="@+id/card_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/demo_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            <View
                    android:id="@+id/shade"
                    android:background="@color/blackTransparent"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            <TextView
                    android:textColor="@android:color/white"
                    android:text="0/1"
                    android:layout_alignEnd="@id/shade"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />

            <TextView
                    android:textColor="@android:color/white"
                    android:text="2:00"
                    android:layout_alignStart="@id/shade"
                    android:paddingLeft="16dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" />

            <TextView
                    android:id="@+id/card_text"
                    android:layout_below="@id/card_image"
                    android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed"
                    android:textColor="#222"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_below="@id/card_text"
                    android:text="Join"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>